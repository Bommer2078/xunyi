/* pages/book-detail/bookDetail.wxss */
.container{
    margin-top:108rpx;
    margin-bottom: 88rpx;
    overflow: hidden;
    background: #f5f5f5;
}

.section{
    width: 100%;
    line-height: 40rpx;
    display: flex;
    align-items: center;
    flex-direction: column;
    margin-top:20rpx;
    padding-top: 30rpx;
    padding-bottom: 30rpx;
    background: #fff;
}

.section .sub-title{
    font-size: 30rpx;
    font-weight: normal;
    color:#000;
    font-family: PingFang-SC-Medium;
    margin-bottom: 30rpx;
}

.introduce .sub-content,.book-info .sub-content{
    width: 100%;
    padding-left:60rpx;
    padding-right:60rpx;
    box-sizing: border-box;
}

.introduce .sub-content{
    font-size: 28rpx;
    color:#666;
}

.book-info .row text:nth-child(1){
    display: inline-block;
    width: 80rpx;
    font-size: 24rpx;
    color:#999;
    text-align: right;
    margin-right:20rpx;
}

.book-info .row text:nth-child(2){
    font-size: 24rpx;
    color:#666;
    text-align: left;
}

.cover > image{
    width: 200rpx;
    height: 300rpx;
    margin-top:10rpx;
    margin-bottom: 30rpx;
    box-shadow: 2px 2px 0 0 #3e3e3e;
}

.cover .book-title{
    font-size: 38rpx;
    font-weight: 700;
    letter-spacing: 2px;
    color: #000000;
    margin-bottom: 10rpx;
}

.cover .book-auth{
    font-size: 28rpx;
    font-weight: 400;
    color: #999;
}

/*短评样式*/
.short-comment {
    width: 100%;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    padding-left:25rpx;
    box-sizing: border-box;
}

.short-comment .comment{
    line-height: 56rpx;
    text-justify: center;
    border-radius: 52rpx;
    margin-right:20rpx;
    margin-bottom:20rpx;
    padding-left:28rpx;
    padding-right:28rpx;
    background: #f7f7f7;
}

.short-comment .comment:nth-child(1){
    background: #fffadd;
}

.short-comment .comment:nth-child(2){
    background: #eefaff;
}

.comment .content{
    font-size: 24rpx;
    color:#666;
}

.comment .add {
    color: #bbb;
    font-size: 20rpx;
    vertical-align: middle;
    margin-left:10rpx;
}

.comment .nums{
    font-size: 20rpx;
    color: #bbb;
}
