/* components/comment/index.wxss */

.container {
    width: 100%;
    height: 88rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    position: fixed;
    bottom:0;
    left:0;
    padding:16rpx 30rpx;
    box-sizing: border-box;
    background: #fff;
    z-index: 100;
}

.input-bar{
    width: 405rpx;
    height: 54rpx;
    display: flex;
    align-items: center;
    line-height: 54rpx;
    border-radius: 27rpx;
    border: 1px solid #000;
}
.input-bar > image{
    width: 24rpx;
    height: 24rpx;
    margin-left:32rpx;
    margin-right:10rpx;

}

.input-bar > text {
    font-size: 24rpx;
    color:#010101;
}

.share {
    width: 28rpx;
    height: 28rpx;
    margin-left:60rpx;
}