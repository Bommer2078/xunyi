/* components/books/index.wxss */
.container{
    width: 240rpx;
    height: 360rpx;
    overflow: hidden;
    position: relative;
    border-radius: 5px;
    box-shadow: 1px 0 1px 0 #e3e3e3;
}

.container > image{
    width: 100%;
    height:100%;
    background: pink;
}

.container .info-card{
    width: 100%;
    height: 138rpx;
    line-height: 40rpx;
    position: absolute;
    bottom:0;
    left:0;
    padding:20rpx;
    box-sizing: border-box;
    background: #fff;
}
.book-info{
    display: flex;
    flex-direction: column;
    text-align: start;
}

.info-card .title{
    font-size: 24rpx;
    color:#1f1f1f;
}
.info-card .auth{
    font-size: 20rpx;
    color:#999
}

.info{
    display: flex;
    justify-content: flex-end;
    font-size: 20rpx;
    color:#bbb;
}



